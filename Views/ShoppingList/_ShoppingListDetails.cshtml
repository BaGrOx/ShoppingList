@model ShopList.Models.ShoppingListViewModel

<div class="d-flex justify-content-between align-items-center">
    <h5>@Model.Name</h5>
    <div>
        <a href="@Url.Action("Edit", "ShoppingList", new { id = Model.Id })" class="btn btn-warning btn-sm">Edytuj</a>
        <form asp-action="Delete" method="post" style="display:inline;">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
        </form>
    </div>
</div>
<ul class="list-group mt-3">
    @foreach (var item in Model.Products)
    {
        <li class="list-group-item @(item.IsDeleted ? "text-decoration-line-through" : "")">
            @item.Description
        </li>
    }
</ul>

<style>
    .text-decoration-line-through {
        text-decoration: line-through;
        color: red;
    }

    .list-group-item {
        padding: .5rem 1rem;
    }
</style>
