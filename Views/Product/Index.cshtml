@model IEnumerable<ShopList.Data.DbModels.Product>

@{
    ViewData["Title"] = "Produkty";
}

<h2>@ViewData["Title"]</h2>

<a href="@Url.Action("Create", "Product")" class="btn btn-primary mb-3">Dodaj nowy produkt</a>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th style="width: 90%;">Opis</th>
            <th style="width: 10%;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td class="@(product.IsDeleted ? "text-deleted" : "")">@product.Description</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger" @(product.IsDeleted ? "disabled" : "")>Skreśl</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table {
        width: 100%;
        margin: 20px 0;
    }

    .thead-dark th {
        background-color: #343a40;
        color: white;
    }

    .btn {
        display: inline-block;
        font-weight: 400;
        color: #212529;
        text-align: center;
        vertical-align: middle;
        user-select: none;
        background-color: #007bff;
        border: 1px solid transparent;
        padding: .375rem .75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: .25rem;
        transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
    }

        .btn:hover {
            color: #fff;
            background-color: #0056b3;
            border-color: #004085;
            text-decoration: none;
        }

    .text-deleted {
        text-decoration: line-through;
        color: red;
    }

    .btn:disabled {
        background-color: #c82333;
        border-color: #bd2130;
    }
</style>
